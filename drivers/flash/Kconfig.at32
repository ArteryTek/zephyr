config SOC_FLASH_AT32
	bool "AT32 flash driver"
	depends on DT_HAS_AT_AT32_FLASH_CONTROLLER_ENABLED
	select FLASH_HAS_DRIVER_ENABLED
	default y
	select USE_AT32_FLASH
	select FLASH_HAS_PAGE_LAYOUT
	select FLASH_HAS_EXPLICIT_ERASE
	help
	  Enable flash driver for AT32 series
