/dts-v1/;
#include <at/at32f403a_407/at32f403avgt7.dtsi>
#include "at_start_f403a-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "AT AT-START-F403A board";
	compatible = "at,at_start_f403a";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds: leds {
		compatible = "gpio-leds";
		red_led: led2 {
			gpios = <&gpiod 13 GPIO_ACTIVE_HIGH>;
			label = "User LED2";
		};
		yellow_led: led3 {
			gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
			label = "User LED3";
		};
		green_led: led4 {
			gpios = <&gpiod 15 GPIO_ACTIVE_HIGH>;
			label = "User LED4";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User";
			gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	aliases {
		led0 = &red_led;
		led1 = &yellow_led;
		led2 = &green_led;
		sw0 = &user_button;
	};
};

&gpioa {
    status = "okay";
};

&gpiob {
    status = "okay";
};

&gpioc {
    status = "okay";
};

&gpiod {
    status = "okay";
};

&gpioe {
    status = "okay";
};

&clk_hick {
	status = "okay";
};

&clk_hext {
	clock-frequency = <8000000>;
	status = "okay";
};

&pll {
	mul = <48>;
	div_fu = <6>;
	xtpre = <1>;
	clocks = <&clk_hext>;
	status = "okay";
};

&sysclk {
	clock-frequency = <DT_FREQ_M(192)>;
	status = "okay";
};

&crm {
	clocks = <&pll>;
	ahb-prescaler = <1>;
	clock-frequency = <192000000>;
	apb1-prescaler = <2>;
	apb2-prescaler = <2>;
	status = "okay";
};

&usb_fs {
    status = "okay";
};

zephyr_udc0: &usb_fs {
	status = "okay";
};

&usart1 {
	pinctrl-0 = <&usart1_default>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&spi1 {
	status = "okay";
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
	dmas = <&dma1 1 9 1 0>, <&dma1 2 10 2 0>;
	dma-names = "rx", "tx";
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
};

&dma1 {
	status = "okay";
};

&i2s1 {
	status = "okay";
	pinctrl-0 = <&i2s1_default>;
	pinctrl-names = "default";
	dmas = <&dma1 1 9 1 0>, <&dma1 2 10 2 0>;
	dma-names = "rx", "tx";
};

&adc1 {
	pinctrl-0 = <&adc1_default>;
	pinctrl-names = "default";
	at,adc-clock-source = "SYNC";
	at,adc-prescaler = <15>;
	status = "okay";
	dmas = <&dma1 3 1 (AT32_DMA_PERIPH_TO_MEMORY|AT32_DMA_NO_PERIPH_ADDR_INC| 
	                  AT32_DMA_MEMORY_ADDR_INC|AT32_DMA_PERIPH_WIDTH_16BIT|
					  AT32_DMA_MEMORY_WIDTH_16BIT|AT32_DMA_PRIORITY_HIGH) 0>;
	dma-names = "rx";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 64KB for bootloader */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(64)>;
			read-only;
		};

		/* storage: 64KB for settings */
		storage_partition: partition@10000 {
			label = "storage";
			reg = <0x00010000 DT_SIZE_K(64)>;
		};

		/* application image slot: 384KB */
		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x00020000 DT_SIZE_K(384)>;
		};

		/* backup slot: 512KB */
		slot1_partition: partition@80000 {
			label = "image-1";
			reg = <0x00080000 DT_SIZE_K(512)>;
		};
	};
};
